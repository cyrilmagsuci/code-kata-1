{
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5433;Database=clean-architecture;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "redis:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
